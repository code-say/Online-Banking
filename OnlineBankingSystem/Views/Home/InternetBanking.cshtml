@model OnlineBankingSystem.Models.InternetBanking
@{
    ViewBag.Title = "InternetBanking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/form.css" rel="stylesheet" type="text/css" />

<h2 class="text-info">InternetBanking</h2>


@using (Html.BeginForm("InternetBanking", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4 class="text-info">Create an account for Internet banking.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group text-info">
        @Html.LabelFor(m => m.AcccountNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AcccountNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        @Html.LabelFor(m => m.TransactionPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.TransactionPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        @Html.LabelFor(m => m.ConfirmTransactionPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmTransactionPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        @Html.LabelFor(m => m.OTP, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OTP, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-info">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <label class="label-success">@ViewBag.SuccessMessage</label>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

